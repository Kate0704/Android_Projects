<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.ConvertLengthActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title=" "/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp" />
    </FrameLayout>


    <fragment
        android:id="@+id/fragment_conversion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:name="ppo.converter.ui.fragments.ConversionFragment"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/separator_line"/>

    <fragment
        android:id="@+id/num_pad_fragment"
        android:layout_weight="11"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:name="ppo.converter.ui.fragments.NumPadFragment"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/separator_line"/>

</LinearLayout>
