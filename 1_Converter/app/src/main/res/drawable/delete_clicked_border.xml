<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/config_btnAnimTime"
    android:exitFadeDuration="@integer/config_btnAnimTime">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="140dp"/>
            <solid android:color="#232323"/>
            <stroke android:width="19dp" android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="140dp"/>
            <solid android:color="#90252525"/>
            <stroke android:width="15dp" android:color="@color/colorPrimary"/>
        </shape>
    </item>
</selector>