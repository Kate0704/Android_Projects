<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="140dp"/>
            <solid android:color="#25D58EFF"/>
            <stroke android:width="17dp" android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="140dp"/>
            <solid android:color="#52D58EFF"/>
            <stroke android:width="15dp" android:color="@color/colorPrimary"/>
        </shape>
    </item>
</selector>